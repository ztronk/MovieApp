@model MovieApp.Models.Movie
@{
    ViewBag.Title = "Просмотр информации о фильме";
}

<h2>@ViewBag.Title.</h2>
<hr />

@Html.HiddenFor(m => m.Id, new { @class = "col-md-2 control-label" })
<div class="form-group">
    @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @readonly = true })
    </div>
</div><br /><br /><br />
<div class="form-group">
    @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @readonly = true })
    </div>
</div><br /><br />
<div class="form-group">
    @Html.LabelFor(m => m.Director, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Director, new { @class = "form-control", @readonly = true })
    </div>
</div><br /><br />
<div class="form-group">
    @Html.LabelFor(m => m.Year, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Year, new { @class = "form-control", @readonly = true })
    </div>
</div><br /><br />
<div class="form-group">
    @Html.LabelFor(m => m.Poster, new { @class = "col-md-2 control-label" })
    @if (string.IsNullOrEmpty(Model.Poster))
    {
        <img src="~/Files/defaultlogo.png" width="80" height="80" />
    }
    else
    {
        <img src="~/Files/@Model.Poster" width="80" height="80" />
    }
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <button type="button" class="btn btn-light" onclick="location.href='@Url.Action("Index", "Movie")'">Главная страница</button>
    </div>
</div>
<br /><br />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
